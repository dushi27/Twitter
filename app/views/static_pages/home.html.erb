<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
    <% else %>
  <div class="center hero-unit">
    <h1>Welcome to Twitter</h1>

    <h3>
      Thank you for visiting! This application is built using
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial by Michael Hartl</a>. Please feel free to 
      sign up, create tweets and follow other users.
    </h3>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("twitter_like_button.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>


